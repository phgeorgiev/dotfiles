[color]
	ui = auto

[color "diff"]
	meta = blue
	frag = white
	old = red bold
	new = green bold

[core]
	editor = vim
	pager = diff-so-fancy | less --chop-long-lines --quit-if-one-screen --no-init --tabs=1,5 -R
	autocrlf = false
	safecrlf = false
	mergeoptions = --no-edit
	excludesfile = ~/.gitignore
	quotepath = false

[alias]
	a = add
	ap = add -p
	c = commit
	ca = commit -a
	cm = commit -m
	co = checkout
	d = diff --color-words
	s = status -sb
	l = log --graph --pretty=format:'%C(magenta)%h%C(blue)%d%Creset %s %C(blue bold)- %an, %ar%Creset'
	ll = log --stat --abbrev-commit
	my = !git log --branches=* --no-merges --pretty=format:'%C(reset)%C(bold)%cd %C(reset)%C(white)%s  %C(reset)%h' --date=short --author=\"$(git config user.name)\"
	wtf = diff --name-only --diff-filter=U
	cleanup = "!git branch --merged | grep -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"

# diff-so-fancy
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[diff]
    tool = vscode
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED

# Include local settings
# Requires Git 1.7.10
# git config -f ~/.gitlocal user.email "your email"
# git config -f ~/.gitlocal user.name "Your Name"
[include]
	path = .gitlocal
